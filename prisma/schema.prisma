generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  cc String @id 
  name String
  createdAt DateTime @default(now())
  
  Service Service[]
}

model Client  {
  cc String @id
  name String
  createdAt DateTime @default(now())
}


model Informative {
  id Int @id @default(autoincrement())
  product String
  medium String
  doneAt DateTime @default(now())
}

model NonMonetaryTransactional {
  id Int @id @default(autoincrement())
  product String
  medium String
  doneAt DateTime @default(now())
}

model MonetaryTransactional {
  id Int @id @default(autoincrement())
  product String
  medium String
  category String @unique 
  doneAt DateTime @default(now())
}

model Service {
  id Int @id @default(autoincrement())
  product String
  medium String 
  user String
  takenBy User @relation(fields: [user], references: [cc])
  doneAt DateTime @default(now()) 
}

model Feedback {
  id Int @id @default(autoincrement())
  title String 
  product String
  medium String
  doneAt DateTime @default(now())
  description String 
  score Int
}

